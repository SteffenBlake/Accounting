@using Accounting.Models

@Html.ActionLink($"Create New {VMPlaceType.SingleName}", "New")

@(Html.EJ().Grid<VMPlaceType>("PlaceTypeGrid")
        .Datasource((IEnumerable<VMPlaceType>)ViewBag.datasource)
        .Columns(col =>
        {
            col.Field(m => m.Name).TextAlign(TextAlign.Center).Add();
            col.HeaderText("Actions").TextAlign(TextAlign.Center).Template("#EDButtons").Add();
        })
)