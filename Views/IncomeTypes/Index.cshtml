@using Accounting.Models

@Html.ActionLink($"Create New {VMIncomeType.SingleName}", "New")

@(Html.EJ().Grid<VMIncomeType>("IncomeTypeGrid")
        .Datasource((IEnumerable<VMIncomeType>)ViewBag.datasource)
        .Columns(col =>
        {
            col.Field(m => m.Name).TextAlign(TextAlign.Center).Add();
            col.HeaderText("Actions").TextAlign(TextAlign.Center).Template("#EDButtons").Add();
        })
)